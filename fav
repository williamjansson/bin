#!/bin/bash


DMENU='dmenu -w 600 -x 980 -y 600 -nb #faf6e6 -nf #1e2d1c -sb #1e2d1c -sf #faf6e6'

choice=$(echo -e "www\nvim\nnoice\nsxiv\nfigma\nsleep\nrboot\noff" | $DMENU)

case "$choice" in
	www) firefox ;;
	vim) st -g 86x28 -e vim ~/hej ;;
	noice) st -g 17x16 -e noice ~/ ;;
	sxiv) sxiv -t ~/img ;;
	figma) chromium ;;
	sleep) echo sleep ;;
	rboot) sudo reboot ;;
	off) sudo poweroff ;;
esac
